<% contents = @edition.document_type.fields.map { |field|
  Rails.logger.warn('rendering contents for: ' + field.id)
  # move into Field objects?
  if field.top_level_field?
    field.as_list_items(edition: @edition, content: {})
  else
    field.as_list_items(edition: @edition, content: @edition.contents[field.id])
  end
}.flatten
%>

<% edition_metadata = [] %>

<% unless @edition.first? %>
  <% edition_metadata << {
      field: t("documents.show.contents.items.update_type"),
      value: t("documents.show.contents.update_type.#{@edition.update_type}"),
  } %>
<% end %>

<% if !@edition.first? && @edition.major? %>
  <% edition_metadata << {
    field: t("documents.show.contents.items.change_note"),
    value: @edition.change_note,
  } %>
<% end %>

<%= render "govuk_publishing_components/components/summary_list", {
  id: "content",
  title: t("documents.show.contents.title"),
  borderless: true,
  edit: (
    if @edition.editable?
      { href: content_path(@edition.document),
        data_attributes: { gtm: "edit-summary" } }
    end
  ),
  items: contents + edition_metadata
} %>
